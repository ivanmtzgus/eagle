<div class="row">
  <div class="col-md-3">
  <%= image_tag @company.image_url %>

<h2>  
  <%= @company.name %>
</h2>

<p>
  <strong>Service:</strong>
  <%= @company.service %>
</p>

<p>
  <strong>Address:</strong>
  <%= @company.address %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @company.phone %>
</p>

<p>
  <strong>Website:</strong>
  <%= link_to@company.website, @company.website %>
</p>

<%= link_to "Write a Review", new_company_review_path(@company), class: "btn btn-primary" %>

  </div>

  <div class="col-md-9">
  <% if @reviews.blank? %>
    <h3>No reviews yet. Be the firts one to write one!</h3>
    <% else %>
      <% @reviews.each do |review| %>
        <p><%= review.rating %></p>
       <p><%= review.comment %></p>
      <% end %>
    <% end %>
  </div>
</div>

<%= link_to 'Edit', edit_company_path(@company), class: "btn btn-link" %> |
<%= link_to 'Back', companies_path, class: "btn btn-link" %>


